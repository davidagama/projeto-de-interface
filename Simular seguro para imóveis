<script >

function myFunction(vari) {
    var inpObj = document.getElementById("id1");
    switch(vari){
		case 0:
	if (inpObj.checkValidity() == false) {
        document.getElementById("demo").innerHTML = inpObj.validationMessage;
    } else {
        document.getElementById("demo").innerHTML = "R$ 600,00";
		document.getElementById("contratar").innerHTML = "Contratar";
    } break;
	case 1:
	if (inpObj.checkValidity() == false) {
        document.getElementById("demo").innerHTML = inpObj.validationMessage;
    } else {
        document.getElementById("demo").innerHTML = "R$ 600,00";
		document.getElementById("contratar").innerHTML = "Contratar";
    } break;
	case 2:
	if (inpObj.checkValidity() == false) {
        document.getElementById("demo").innerHTML = inpObj.validationMessage;
    } else {
        document.getElementById("demo").innerHTML = "R$ 800,00";
		document.getElementById("contratar").innerHTML = "Contratar";
    } 
	break;
	}
} 
</script>
