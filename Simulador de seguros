<script language="JavaScript">

function gotoPage(varItem)
{
  switch(varItem)
  {
    case 0:
      window.parent.self.status="Selecione";
      break;
    case 1:
      window.location="seguro-de-veiculos.html";
      break;
    case 2:
      window.location="seguro-de-viagens.html";
      break;
   	case 3:
		window.location="seguro-de-vida.html";
		 break;
	case 4:
		window.location="seguro-para-imoveis.html";
		 break;
  }
}

</script>
